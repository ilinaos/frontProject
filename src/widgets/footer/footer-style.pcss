.footer {
    width: 90%;
    display: flex;
    flex-direction: column;
    padding-left: 2em;
    padding-right: 2em;

    &__first {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
    }

    &__second {
        display: flex;
        flex-direction: row;
        justify-content: start;
    }

    &__contacts {
        color: #888888;
        +.footer__contacts{
            margin-left: 2.5em;
        }

    }
}